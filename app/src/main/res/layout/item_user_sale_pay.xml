<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                style="@style/text_15_black_28"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="交易客户"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="@dimen/j30dp"
                    android:layout_height="@dimen/j30dp"
                    android:src="@mipmap/user_icon"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/text_15_black_999"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:text="交易客户"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                style="@style/text_15_black_28"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="商户"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_merchant_head"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/tv_merchant_name"
                    style="@style/text_15_black_999"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:text="交易商户"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="visible">

            <TextView
                style="@style/text_15_black_28"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:text="消费金额"/>

            <TextView
                android:id="@+id/tv_sale_money"
                style="@style/text_15_black_999"
                android:layout_width="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text=""
                android:textColor="@color/font_main"/>
        </LinearLayout>

        <View
            style="@style/divider_1px"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_create_time"
                style="@style/text_15_black_28"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text=""
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

