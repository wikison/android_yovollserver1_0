<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_dark" >

    <include
		layout="@layout/app_top"
        android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_alignParentTop="true"></include>

    <RelativeLayout
        android:id="@+id/app_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_layout_top"></RelativeLayout>
	<RelativeLayout
        android:id="@+id/re_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@layout/app_top"
        android:visibility="gone"
         >
	     <TextView
	        android:id="@+id/tv_empty"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	         />
   	</RelativeLayout>
</RelativeLayout>