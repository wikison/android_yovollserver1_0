<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="16dp">

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <TextView
            android:id="@+id/tv_pic_num"
            style="@style/text_16_black_666"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textSize="11sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_16_black_28"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="dddddddddd"/>

            <Button
                android:id="@+id/btn_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/check_selector"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_new_price"
                style="@style/text_15_black_28"
                android:text="$20"
                android:textColor="@color/c2306764"/>

            <TextView
                android:id="@+id/tv_old_price"
                style="@style/text_14_black_28"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:text="$20"
                android:textColor="@color/font_black_999"/>

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_pre_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="订金$20"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:rv_backgroundColor="@color/c18414266"
                app:rv_cornerRadius="3px"
                app:rv_isRippleEnable="false"/>

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="佣金$20"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:rv_backgroundColor="@color/c2306764"
                app:rv_cornerRadius="3px"
                app:rv_isRippleEnable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp">

            <TextView
                android:id="@+id/tv_sale_num"
                style="@style/text_13_black_999"
                android:text="$20"/>

            <TextView
                android:id="@+id/tv_stock_num"
                style="@style/text_13_black_999"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:text="$20"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>