<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/font_black_28"
                android:elevation="1px">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center_vertical">

        <Button

            android:id="@+id/lh_btn_back"
            android:layout_width="@dimen/j44dp"
            android:layout_height="@dimen/j44dp"
            android:background="@mipmap/btn_back"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fangdajin_icon"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right2"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ll_right"
        android:clickable="true"
        android:gravity="right|center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fangdajin_icon"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="78dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="right|center_vertical"
        android:paddingRight="12dp"
        android:textColor="@drawable/head_right_text_color"
        android:textSize="@dimen/font_30px"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/lh_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/lh_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:textColor="@drawable/head_right_text_color"
        android:textSize="14sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/lh_btn_rightiamge"
        android:layout_width="@dimen/j35dp"
        android:layout_height="@dimen/j35dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="8dp"
        android:textSize="14sp"
        android:visibility="invisible"/>

</RelativeLayout>