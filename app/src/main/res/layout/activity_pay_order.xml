<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_f2"
              android:orientation="vertical">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_merchant_name"
                style="@style/layout_item_48">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="入账商户"/>


                <TextView
                    android:id="@+id/tv_merchant_name"
                    style="@style/text_14_black_999"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="10dp"
                    android:text="商户名称"/>

            </RelativeLayout>

            <View
                style="@style/divider"/>

            <RelativeLayout
                android:id="@+id/rl_order"
                style="@style/layout_item_48">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="关联服务订单"/>


                <TextView
                    android:id="@+id/tv_order"
                    style="@style/text_14_black_333"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/right_btn"
                    android:text="选择要关联的服务订单"
                    android:textColor="@color/font_black_999"/>
            </RelativeLayout>

            <View
                style="@style/divider"/>

            <RelativeLayout
                android:id="@+id/rl_service_item"
                style="@style/layout_item_48">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="服务项"/>


                <TextView
                    android:id="@+id/tv_service_item"
                    style="@style/text_14_black_999"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="10dp"
                    android:text="商务订餐"/>

            </RelativeLayout>

            <View
                style="@style/divider"/>

            <RelativeLayout
                android:id="@+id/rl_order_info"
                style="@style/layout_item_48"
                android:layout_marginTop="@dimen/margin_12dp"
                android:paddingRight="8dp">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="买单信息"/>

                <EditText
                    android:id="@+id/et_order_info"
                    style="@style/text_14_black_28"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="输入买单的房间/包厢/桌号等信息"
                    android:maxLength="15"
                    android:imeOptions="actionNext"
                    android:paddingRight="8dp"
                    android:textColorHint="@color/font_black_999"/>
            </RelativeLayout>

            <View
                style="@style/divider"/>


            <RelativeLayout
                android:id="@+id/rl_order_money"
                style="@style/layout_item_48"
                android:paddingRight="8dp">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="买单金额"/>

                <EditText
                    android:id="@+id/et_order_money"
                    style="@style/text_14_black_28"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:background="@null"
                    android:gravity="right"
                    android:imeOptions="actionNext"
                    android:hint="输入客户消费金额"
                    android:maxLength="15"
                    android:paddingRight="8dp"
                    android:textColorHint="@color/font_black_999"/>
            </RelativeLayout>

            <View
                style="@style/divider"/>

            <RelativeLayout
                android:id="@+id/rl_order_invoice"
                style="@style/layout_item_48"
                android:paddingRight="8dp">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="开票抬头"/>

                <EditText
                    android:id="@+id/et_order_invoice"
                    style="@style/text_14_black_28"
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:background="@null"
                    android:gravity="right"
                    android:imeOptions="actionDone"
                    android:hint="输入客户开票抬头"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:paddingRight="8dp"
                    android:textColorHint="@color/font_black_999"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_12dp"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <View
                        style="@style/divider"
                        android:layout_gravity="center"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="140dp"
                        android:background="@color/font_black_333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/bg_f2"
                        android:text="  给客户推荐  "
                        android:textColor="@color/font_black_333"
                        android:textSize="12sp"/>
                </FrameLayout>

                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/rll_product_recommend"
                    style="@style/layout_item_48"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:layout_marginRight="@dimen/margin_16dp"
                    android:layout_marginTop="12dp"
                    app:rv_backgroundColor="@color/white"
                    app:rv_backgroundPressColor="@color/bg_ce"
                    app:rv_cornerRadius="24dp"
                    app:rv_strokeColor="@color/divider_dc"
                    app:rv_strokeWidth="1px">

                    <TextView
                        style="@style/text_15_black_28"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="产品推荐"/>


                    <TextView
                        android:id="@+id/tv_product_recommend"
                        style="@style/text_14_black_333"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_btn"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="250dp"
                        android:text="选择商务订餐相关产品"
                        android:textColor="@color/font_black_999"/>

                </com.flyco.roundview.RoundRelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_12dp">


        <com.flyco.roundview.RoundLinearLayout
            android:id="@+id/rll_generate_pay_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:rv_backgroundColor="@color/c18414266">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:drawablePadding="4dp"
                android:text="生成付款码"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </com.flyco.roundview.RoundLinearLayout>
    </LinearLayout>

</LinearLayout>
